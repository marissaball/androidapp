<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marissaball.android_app.MainActivity"
    android:background="@drawable/rectangle">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/symptoms"
            android:fontFamily="casual"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:text="Left Ear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left"
            android:textSize="60sp"
            android:textAlignment="viewStart"
            android:fontFamily="casual"
            android:textColor="?android:attr/colorActivatedHighlight" />
            <!--android:onClick="leftClickFunction"/>-->

        <TextView
            android:text="Right Ear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/right"
            android:textSize="60sp"
            android:textAlignment="textEnd"
            android:fontFamily="casual"
            android:textColor="@android:color/holo_purple"/>
            <!--android:onClick="rightClickFunction"/>-->

        <TextView
            android:text="Medication Taken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medication"
            android:fontFamily="casual"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorHint"/>
        <!--android:onClick="medicationClickFunction"/>-->


    </LinearLayout>
</RelativeLayout>
